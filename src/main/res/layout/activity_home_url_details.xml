<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <include layout="@layout/common_split_block" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_height"
        android:background="@drawable/base_selector_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_item_text_padding"
        android:paddingRight="@dimen/base_item_text_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网站名称："
            android:textColor="@color/app_text_gray_deep"
            android:textSize="@dimen/app_text_size_small" />

        <TextView
            android:id="@+id/websiteNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="暂无网站名称信息"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/app_text_size_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_gray" />

    </LinearLayout>

    <include layout="@layout/common_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_height"
        android:background="@drawable/base_selector_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_item_text_padding"
        android:paddingRight="@dimen/base_item_text_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页网址："
            android:textColor="@color/app_text_gray_deep"
            android:textSize="@dimen/app_text_size_small" />

        <TextView
            android:id="@+id/websiteHomeUrlTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="暂无首页网址信息"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/app_text_size_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_gray" />

    </LinearLayout>

    <include layout="@layout/common_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_item_height"
        android:background="@drawable/base_selector_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_item_text_padding"
        android:paddingRight="@dimen/base_item_text_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核日期："
            android:textColor="@color/app_text_gray_deep"
            android:textSize="@dimen/app_text_size_small" />

        <TextView
            android:id="@+id/examineTimeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="暂无审核日期信息"
            android:textColor="@color/app_text_gray"
            android:textSize="@dimen/app_text_size_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_gray" />

    </LinearLayout>

</LinearLayout>
